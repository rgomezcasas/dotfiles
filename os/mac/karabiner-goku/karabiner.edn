    :rules [[:!CTdown_arrow :!CTup_arrow]]}
   {:des   "[keyboard] shift + opt + cmd + ‚Üë as shift + opt + cmd + ‚Üí"
    :rules [[:!CTdown_arrow :!CTup_arrow]]}
   {:des   "[keyboard] ctr + cmd + space as fn"
    :rules [[:!CTspacebar :fn]]}
   {:des   "[keyboard] disable minimize with cmd+m"
    :rules [[:!Cm :!CTSm]]}

