{
	"theme": "custom",
	"display": {
		"style": "powerline",
		"colorCompatibility": "auto",
		"lines": [
			{
				"segments": {
					"directory": {
						"enabled": true,
						"showBasename": true
					},
					"model": {
						"enabled": true
					},
					"git": {
						"enabled": false
					},
					"metrics": {
						"enabled": true,
						"showResponseTime": false,
						"showLastResponseTime": false,
						"showDuration": false,
						"showMessageCount": true,
						"showLinesAdded": false,
						"showLinesRemoved": false
					},
					"context": {
						"enabled": true,
						"showPercentageOnly": false
					},
					"session": {
						"enabled": true,
						"type": "cost",
						"costSource": "calculated"
					},
					"block": {
						"enabled": true,
						"type": "cost",
						"burnType": "cost"
					},
					"today": {
						"enabled": false,
						"type": "cost"
					}
				}
			}
		]
	},
	"colors": {
		"custom": {
			"directory": {
				"bg": "#2a2a2a",
				"fg": "#e0e0e0"
			},
			"git": {
				"bg": "#3a3a3a",
				"fg": "#d0d0d0"
			},
			"model": {
				"bg": "#4a4a4a",
				"fg": "#c0c0c0"
			},
			"session": {
				"bg": "#5a5a5a",
				"fg": "#b0b0b0"
			},
			"block": {
				"bg": "#404040",
				"fg": "#cccccc"
			},
			"today": {
				"bg": "#303030",
				"fg": "#dddddd"
			},
			"tmux": {
				"bg": "#8a8a8a",
				"fg": "#2a2a2a"
			},
			"context": {
				"bg": "#6a6a6a",
				"fg": "#ffffff"
			},
			"metrics": {
				"bg": "#565656",
				"fg": "#e5e5e5"
			},
			"version": {
				"bg": "#7a7a7a",
				"fg": "#f0f0f0"
			}
		}
	}
}
