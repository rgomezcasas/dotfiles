{
	"theme": "custom",
	"display": {
		"style": "powerline",
		"colorCompatibility": "auto",
		"lines": [
			{
				"segments": {
					"directory": {
						"enabled": true,
						"showBasename": true
					},
					"model": {
						"enabled": true
					},
					"git": {
						"enabled": false
					},
					"metrics": {
						"enabled": true,
						"showResponseTime": false,
						"showLastResponseTime": false,
						"showDuration": false,
						"showMessageCount": true,
						"showLinesAdded": false,
						"showLinesRemoved": false
					},
					"context": {
						"enabled": true,
						"showPercentageOnly": false
					},
					"session": {
						"enabled": true,
						"type": "cost",
						"costSource": "calculated"
					},
					"block": {
						"enabled": true,
						"type": "cost",
						"burnType": "cost"
					},
					"today": {
						"enabled": false,
						"type": "cost"
					}
				}
			}
		]
	},
	"colors": {
		"custom": {
			"directory": {
				"bg": "#1a2233",
				"fg": "#3cff64"
			},
			"git": {
				"bg": "#243044",
				"fg": "#8fb3ff"
			},
			"model": {
				"bg": "#1e2839",
				"fg": "#3cff64"
			},
			"session": {
				"bg": "#263546",
				"fg": "#b8c5db"
			},
			"block": {
				"bg": "#2a3a4d",
				"fg": "#3cff64"
			},
			"today": {
				"bg": "#192030",
				"fg": "#8fb3ff"
			},
			"tmux": {
				"bg": "#364a66",
				"fg": "#ffffff"
			},
			"context": {
				"bg": "#243140",
				"fg": "#3cff64"
			},
			"metrics": {
				"bg": "#222e3f",
				"fg": "#c5d1e6"
			},
			"version": {
				"bg": "#2f4058",
				"fg": "#3cff64"
			}
		}
	}
}
