#!/usr/bin/env bash

set -euo pipefail

source "$DOTLY_PATH/scripts/core/_main.sh"

##? Open one common element
#?? 1.0.0
##?
##? Usage:
##?   open_common
docs::parse "$@"

declare -A folders

folders=(
	["ğŸ”— Codely"]="https://codely.com"
	["ğŸ”— Pro"]="https://pro.codely.com"
	["ğŸ“ Downloads"]="$HOME/Downloads"
	["ğŸ“ Desktop"]="$HOME/Desktop"
	["ğŸ“ tmp"]="$HOME/Desktop/tmp"
	["ğŸ“ screenshots"]="$HOME/Desktop/tmp/screenshots"
	["ğŸ“ screencasts"]="$HOME/Desktop/tmp/screencasts"
	["ğŸ“ Thumbnails"]="$GOOGLE_DRIVE_PATH/Shared drives/ğŸ‘‘ Contents/ğŸ”– Pro/Design/Thumbnails Cursos"
)

folder=$(printf "%s\n" "${!folders[@]}" | choose)

if [[ -n ${folders[$folder]} ]]; then
    open "${folders[$folder]}"
else
    echo "No folder selected"
fi
