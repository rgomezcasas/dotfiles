#!/bin/bash

extract_lists() {
  local text="$1"
  echo "$text" | awk 'NF && !/^ {6,}[-\[]/' | sed -e 's/\(âœ…\|â˜‘ï¸\|ğŸ¥\)//g' -e 's/\[YouTube\] //g'
}

extract_lists "$(pbpaste)"
